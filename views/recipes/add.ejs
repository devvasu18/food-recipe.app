<main class="page-content">
  <h1>Add New Recipe</h1>
  <form action="/add" class="form" method="POST" enctype="multipart/form-data">
    <input type="text" name="title" placeholder="Title" required>
    <input type="file" name="image" class="form-input" accept="image/*" required>
    <input type="number" class="form-input" name="price" placeholder="Price" required>
    <textarea name="ingredients" placeholder="Ingredients (comma-separated)" required></textarea>
    <textarea name="steps" placeholder="Steps" required></textarea>
    <select class="form-input" name="category" required>
        <option value="">Select Category</option>
        <option value="Breakfast">Breakfast</option>
        <option value="Lunch">Lunch</option>
        <option value="Snacks">Snacks</option>
        <option value="Dinner">Dinner</option>
        <option value="Desserts">Desserts</option>
    </select>
    <button type="submit">Add</button>
</form>
</main>
