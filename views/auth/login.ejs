<!DOCTYPE html>
<html>
<head>
 <title>Login</title>
  <link rel="stylesheet" href="/auth.css">
  <link rel="stylesheet" href="/styles.css" />

</head>
<body>

<main class="page-content">
<nav class="navbar">
  <div class="logo">
    <a href="/">üçΩÔ∏è RecipeHub</a>
  </div>
  <ul class="nav-links">
  <li><a href="/">Home</a></li>

  <% if (isAuthenticated) { %>
    <li><a href="/my-recipes">My Recipes</a></li>
    <li><a href="/orders">My Orders</a></li>
  <% } %>

  <li><a href="/about">About</a></li>

  <% if (isAuthenticated) { %>
    <li><a href="/logout">Logout</a></li>
  <% } else { %>
    <li><a href="/login">Login</a></li>
  <% } %>
</ul>
</nav>

  <div class="auth-container">
    <h1>Login</h1>
    <form action="/login" method="POST" class="auth-form">
      <input type="text" name="email" id="auth-input" placeholder="Email" required />
      <input type="password" name="password" id="auth-input" placeholder="Password" required />
      <button type="submit">Login</button>
    </form>

    <% if (errors && errors.length > 0) { %>
  <ul class="error-messages">
    <% errors.forEach(error => { %>
      <li style="color: red; font-weight: bold; list-style: none;"><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

    <p class="auth-footer">Don't have an account? <a href="/signup">Sign up</a></p>
  </div>
</main>
